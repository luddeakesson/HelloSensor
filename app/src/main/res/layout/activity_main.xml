<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.ludvig.hellosensor.MainActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="270dp"
        android:id="@+id/accelerometer_button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/ovre"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/kompass_button"
        android:layout_centerHorizontal="true"
        android:background="@color/undre"
        android:layout_below="@+id/accelerometer_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Accelerometer"
        android:id="@+id/accelerometer_text"
        android:layout_alignTop="@+id/accelerometer_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87dp"
        android:textColor="@color/undre"
        android:textStyle="bold"
        android:textSize="40sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Compass"
        android:id="@+id/compass_text"
        android:textColor="@color/ovre"
        android:layout_below="@+id/accelerometer_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:textSize="40sp"
        android:textStyle="bold" />
</RelativeLayout>
